extends base.pug
block title
  title Seller 
block style 
  style
      include ../static/style.css
      include ../static/seller.css

block content
  div.big
      div.signup 
        h2 Sell your Product
        form(action="/seller" method="post" id="form")
          h3 Owner's details
          input(type="text" placeholder="Name" name="Name")
          input(type="email" placeholder="Email" name="Email")
          input(type="Phone" placeholder="Phone number" name="Phone")
          input(type="text" placeholder="Address" name="Address")
          h3 Product's details
          input(type="text" placeholder="Products Name" name="ProductsName")
          input(type="text" placeholder="Brand's Name" name="BrandsName")  
          input(type="text" placeholder="Type: eg.Mobiles/bicycle/cooler" name="Type")
          input(type="number" placeholder="Age of product" name="Age")
          input(type="image-link" placeholder="Image address" name="Image")
          input(type="number" placeholder="Cost of product" name="Cost")
          input(type="submit" id="submit") 
        p.fill #{Fill} 